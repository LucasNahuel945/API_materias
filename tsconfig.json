{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["ES5","ES6","DOM"],
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir":"./src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": [ "./node_modules" ]
}
